<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorBackground">
    <ImageView
            android:id="@+id/filmImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/ic_no_image"
            android:layout_margin="16dp"/>
    <TextView
            tools:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            android:layout_toEndOf="@+id/filmImageView"
            android:layout_toRightOf="@+id/filmImageView"
            android:layout_alignTop="@+id/filmImageView"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-smallcaps"/>
    <TextView
            android:text="@string/year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearText"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/nameTextView"
            android:layout_toEndOf="@+id/filmImageView"
            android:layout_toRightOf="@+id/filmImageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"/>
    <TextView
            android:text="@string/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingText"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/yearText"
            android:layout_toEndOf="@+id/filmImageView"
            android:layout_toRightOf="@+id/filmImageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"/>
    <TextView
            tools:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/filmImageView"
            android:scrollbars = "vertical"
            android:nestedScrollingEnabled="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"/>
    <TextView
            tools:text="1999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearTextView"
            android:layout_toEndOf="@+id/yearText"
            android:layout_toRightOf="@+id/yearText"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@+id/yearText"
            android:textSize="18sp"
            android:fontFamily="sans-serif"/>
    <TextView
            tools:text="9.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingTextView"
            android:layout_alignTop="@+id/ratingText"
            android:layout_toEndOf="@+id/ratingText"
            android:layout_toRightOf="@+id/ratingText"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="18sp" android:fontFamily="sans-serif"/>

</RelativeLayout>